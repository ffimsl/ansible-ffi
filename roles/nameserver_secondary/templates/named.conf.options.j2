// {{ ansible_managed }}

options {
  directory "/var/cache/bind";

  dnssec-validation auto;

  listen-on { any; };
  listen-on-v6 { any; };

  // Autoritativ nach au√üen
  allow-query { any; };

  // Kein Resolver
  recursion no;

  auth-nxdomain no;    # conform to RFC1035
  minimal-responses yes;

  tcp-clients 1000;
  rrset-order { order random; };
};
